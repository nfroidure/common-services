{
  "name": "common-services",
  "version": "0.0.0",
  "description": "A module to gather very common services and their mocks.",
  "main": "src/index.js",
  "author": "Nicolas Froidure",
  "license": "MIT",
  "metapak": {
    "data": {
      "files": "src/*.js",
      "testsFiles": "src/*.mocha.js"
    },
    "configs": [
      "jsdocs",
      "jsarch",
      "readme",
      "eslint",
      "codeclimate",
      "mocha",
      "travis"
    ]
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.5",
    "coveralls": "^2.11.15",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^4.12.1",
    "eslint-plugin-prettier": "^2.3.1",
    "istanbul": "^0.4.5",
    "jsarch": "^1.2.3",
    "jsdoc-to-markdown": "^3.0.2",
    "metapak": "^1.0.1",
    "metapak-nfroidure": "^2.0.0",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "prettier": "^1.8.2",
    "sinon": "^2.1.0"
  },
  "scripts": {
    "architecture": "jsarch src/*.js > ARCHITECTURE.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "cover": "istanbul cover _mocha --report html -- src/*.mocha.js -R spec -t 5000",
    "coveralls": "istanbul cover _mocha --report lcovonly -- src/*.mocha.js -R spec -t 5000 && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "doc": "mkdir -p .readme; echo \"# API\" > .readme/API.md; jsdoc2md src/*.js >> .readme/API.md",
    "lint": "eslint src/*.js",
    "metapak": "metapak",
    "mocha": "mocha src/*.mocha.js",
    "prettier": "prettier --write src/*.js",
    "preversion": "npm t && npm run lint && npm run metapak -s",
    "test": "mocha src/*.mocha.js && npm run mocha",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfroidure/common-services.git"
  },
  "keywords": [
    "services",
    "common",
    "knifecycle"
  ],
  "bugs": {
    "url": "https://github.com/nfroidure/common-services/issues"
  },
  "homepage": "https://github.com/nfroidure/common-services#readme",
  "engines": {
    "node": ">=6.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "debug": "2.6.1",
    "knifecycle": "^2.0.0",
    "yerror": "^2.0.0"
  },
  "greenkeeper": {
    "ignore": [
      "commitizen",
      "cz-conventional-changelog",
      "conventional-changelog-cli",
      "jsdoc-to-markdown",
      "jsarch",
      "eslint",
      "eslint-config-prettier",
      "prettier",
      "mocha",
      "mocha-lcov-reporter",
      "coveralls",
      "istanbul"
    ]
  }
}