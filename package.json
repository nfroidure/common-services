{
  "name": "common-services",
  "version": "3.0.0",
  "description": "A module to gather very common services and their mocks.",
  "main": "dist/index.js",
  "author": "Nicolas Froidure",
  "license": "MIT",
  "metapak": {
    "data": {
      "files": "src/*.js"
    },
    "configs": [
      "jsdocs",
      "jsarch",
      "readme",
      "eslint",
      "codeclimate",
      "jest",
      "babel",
      "travis"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.8",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.19.0",
    "eslint-plugin-prettier": "^2.6.0",
    "istanbul": "^1.0.0-alpha.2",
    "jest": "^22.4.2",
    "jsarch": "^1.3.0",
    "jsdoc-to-markdown": "^3.1.0-0",
    "metapak": "^1.0.3",
    "metapak-nfroidure": "^4.0.2",
    "prettier": "^1.11.1",
    "sinon": "^2.4.1"
  },
  "scripts": {
    "architecture": "jsarch src/*.js > ARCHITECTURE.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "compile": "babel src --out-dir=dist",
    "cover": "jest --config=.jest.config.js --coverage",
    "coveralls": "npm run cover && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "doc": "echo \"# API\" > API.md; jsdoc2md src/*.js >> API.md",
    "lint": "eslint src/*.js",
    "metapak": "metapak",
    "mocha": "mocha --compilers js:babel-register src/*.mocha.js",
    "prettier": "prettier --write src/*.js",
    "preversion": "npm t && npm run lint && npm run metapak -s && npm run compile",
    "test": "jest --config=.jest.config.js",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfroidure/common-services.git"
  },
  "keywords": [
    "services",
    "common",
    "knifecycle"
  ],
  "bugs": {
    "url": "https://github.com/nfroidure/common-services/issues"
  },
  "homepage": "https://github.com/nfroidure/common-services#readme",
  "engines": {
    "node": ">=6.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "knifecycle": "^2.4.1",
    "yerror": "^2.1.0"
  },
  "greenkeeper": {
    "ignore": [
      "commitizen",
      "cz-conventional-changelog",
      "conventional-changelog-cli",
      "jsdoc-to-markdown",
      "jsarch",
      "eslint",
      "eslint-config-prettier",
      "prettier",
      "jest",
      "coveralls",
      "istanbul"
    ]
  }
}
